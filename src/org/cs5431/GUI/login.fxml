<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.cs5431.GUI.LoginController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <GridPane id="login_pane">
              <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Text text="Username:" textAlignment="RIGHT"
                        wrappingWidth="100.0" GridPane.columnIndex="1" />
                  <Text text="Password:" textAlignment="RIGHT"
                        wrappingWidth="100.0" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                  <Text text="Server IP:" textAlignment="RIGHT"
                        wrappingWidth="100.0" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                   <TextField fx:id="txtUsername" promptText="username"
                             GridPane.columnIndex="2" />
                   <PasswordField fx:id="txtPassword" promptText="password"
                             GridPane.columnIndex="2" GridPane.rowIndex="1" />
                   <TextField fx:id="txtServer" promptText="ip"
                             GridPane.columnIndex="2" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            <Button fx:id="loginButton" mnemonicParsing="false" text="Login" />
         </children>
      </VBox>
   </children>
</AnchorPane>
